{
	"settings": 
	{
		"number_of_shards": 5,
		"analysis": 
		{
			"analyzer": 
			{
				"mstar_text_ngram_analyzer": 
				{
					"filter": 
					[
						"standard",
						"lowercase",
						"asciifolding",
						"mstar_text_ngram_tokenizer"
					],

					"type": "custom",
					"tokenizer": "standard"
				}
			},

			"filter": 
			{
				"mstar_text_ngram_tokenizer": 
				{
					"type": "edgeNGram",
					"min_gram": "2",
					"max_gram": "20"
				}
			}
		}
	},

	"mappings": 
	{
		"company": 
		{
			"dynamic": false,
			"_id": 
			{
				"path": "tickerCode"
			},

			"properties": 
			{
				"tickerCode": 
				{
					"type": "string",
					"index": "not_analyzed"
				},

				"marketCap": 
				{
					"type": "double"
				},

				"volume": 
				{
					"type": "double"
				}
			}
		},

		"financial": 
		{
			"dynamic": false,
			"properties": 
			{
				"tickerCode": 
				{
					"type": "string",
					"index": "not_analyzed",
					"stored": true
				}
			}
		},

		"_default_": 
		{
			"dynamic": false,
			"properties": 
			{
				"id": 
				{
					"type": "string",
					"index": "not_analyzed",
					"index_name": "id"
				}
			}
		}
	}
}
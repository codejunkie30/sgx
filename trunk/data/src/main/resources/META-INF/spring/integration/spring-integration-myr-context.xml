<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:int="http://www.springframework.org/schema/integration"
	xmlns:int-ftp="http://www.springframework.org/schema/integration/ftp"
	xmlns:task="http://www.springframework.org/schema/task" xmlns:int-http="http://www.springframework.org/schema/integration/http"
	xsi:schemaLocation="http://www.springframework.org/schema/integration/http http://www.springframework.org/schema/integration/http/spring-integration-http-3.0.xsd
		http://www.springframework.org/schema/integration/ftp http://www.springframework.org/schema/integration/ftp/spring-integration-ftp.xsd
		http://www.springframework.org/schema/integration http://www.springframework.org/schema/integration/spring-integration.xsd
		http://www.springframework.org/schema/task http://www.springframework.org/schema/task/spring-task.xsd
		http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

	<int:chain id="indexerChain7" input-channel="indexRequestChannel7" output-channel="indexChannel7" >
		
		<int:header-enricher>
			<int:header name="indexName" expression="'${elasticsearch.index.myr.prefix}' + headers.jobId" overwrite="true" />
			<int:header name="indexDate" expression="headers.jobDate" />
			<int:header name="fxBatchSize" value="${loader.fx.fxBatchSize}" />
		</int:header-enricher>
		<int:service-activator ref="indexerService" method="createIndex" />
		<!-- <int:service-activator ref="indexBuilderService" method="buildAlphaFactors" /> -->
		<int:service-activator ref="indexBuilderService" method="createFXIndex" />
		<int:service-activator ref="indexerService" method="flush" />
	</int:chain>

	<int:channel id="indexChannel7" />
	<int:channel id="loggingChannel7" />
	<int:channel id="errorLoggerChannel7"/>	
	<int:channel id="failedLogger7"/>
	<int:publish-subscribe-channel id="aggregationCompleteChannel7"/>
		
	
	
	<!-- Split on tickers for multi-threading -->
	<int:splitter id="tickerSplitter7" input-channel="indexChannel7"
	output-channel="indexTickerChannel7" ref="indexBuilderService" method="readTickers" />
	
		<!-- Load Data -->
 	<int:chain 
 		id="indexDataChain7"
		input-channel="indexTickerChannel7"
		output-channel="tickerAggregatorChannel7">

		<int:header-enricher>
			<int:error-channel value="indexErrorChannel7"/>
		</int:header-enricher>	
		
		<int:service-activator ref="indexBuilderService" method="index">
			<int:request-handler-advice-chain >
				<ref bean="retryAdvice7"/>
			</int:request-handler-advice-chain>
		</int:service-activator>
	</int:chain>
	
	
	<!-- Indexing Error Handling -->
	<int:chain 
		id="indexErrorHandlingChain7"
		input-channel="indexErrorChannel7" 
		output-channel="tickerAggregatorChannel7">		
			
			<int:transformer expression="payload.failedMessage"/>
						
			<int:enricher>
				<int:property name="indexed" value="false"/>
			</int:enricher>							
	</int:chain>
	
	<int:aggregator id="tickerAggregtor7" 
		input-channel="tickerAggregatorChannel7"
	 	output-channel="aggregationCompleteChannel7"
		correlation-strategy-expression="headers.jobId"
		release-strategy-expression="#this.size() == #this[0].headers.sequenceSize">
	</int:aggregator>
	
	<int:router	input-channel="aggregationCompleteChannel7" 
		ref="indexBuilderService"
		method="isJobSuccessful">
				
    	<int:mapping value="true" channel="createAlias7"/>
    	<int:mapping value="false" channel="failedJobChannel7"/>
    	    	
	</int:router>
	
	<!--  Job Completed successfully, create index and remove old indexes -->
	<int:chain input-channel="createAlias7" output-channel="loggingChannel7">
		<int:service-activator ref="indexerService"
			method="createIndexAlias" />
		<int:service-activator ref="indexBuilderService"
			method="deleteOldIndexes" />
	</int:chain>

	
	<int:logging-channel-adapter channel="loggingChannel7" level="INFO" expression=" 'Job Complete ' + payload.toString()" />
		
		<!-- Job failed -->
	<int:header-enricher input-channel="failedJobChannel7" output-channel="failedLogger7">
		<int:header name="failedJob" value="true"/>
	</int:header-enricher>	
		
	<int:logging-channel-adapter channel="failedLogger7" level="INFO" expression=" 'Job Failed ' + payload.toString()"/>
	
	
	<!-- Channel definitions -->
	<task:executor id="indexerTaskExecutor7" pool-size="${loader.threads}" queue-capacity="100" rejection-policy="CALLER_RUNS" />
	<task:executor id="indexerRequestChannelExecutor7" pool-size="1" queue-capacity="1" rejection-policy="DISCARD" />

	<int:channel id="indexRequestChannel7">
		<int:dispatcher task-executor="indexerRequestChannelExecutor7" />
	</int:channel>
	
	<int:channel id="indexTickerChannel7" datatype="com.wmsi.sgx.model.integration.CompanyInputRecord">	
		<int:dispatcher task-executor="indexerTaskExecutor7" />
	</int:channel>

	<int:channel id="tickerAggregatorChannel7">
		<int:interceptors>
			<int:wire-tap channel="statusLoggingChannel7" />
		</int:interceptors>
	</int:channel>
	
	<int:channel id="statusLoggingChannel7"/>	
	<int:logging-channel-adapter channel="statusLoggingChannel7" level="INFO" expression=" 'Processing ' + headers.sequenceNumber + ' of ' + headers.sequenceSize"/>
	
	<int:channel id="indexErrorChannel7">
		<int:interceptors>
			<int:wire-tap channel="errorLoggerChannel7"/>
		</int:interceptors>
	</int:channel>
	
	<!--  Error Logging -->
	<int:channel id="errorLoggerChannel7"/>		
	<int:service-activator input-channel="errorLoggerChannel7" ref="loggerAdapter" method="error"/>
	<bean id="loggerAdapter1" class="com.wmsi.sgx.logging.integration.IntegrationLoggerAdapter"/>
	
	<!-- Retry Handler -->
	<bean id="retryAdvice7" class="org.springframework.integration.handler.advice.RequestHandlerRetryAdvice">
		<property name="retryTemplate">
			<bean id="retryTemplate7" class="org.springframework.retry.support.RetryTemplate">	
				<property name="retryPolicy">
					<bean class="org.springframework.retry.policy.SimpleRetryPolicy">
						<property name="maxAttempts" value="4" />
					</bean>
				</property>
				<property name="backOffPolicy">
					<bean class="org.springframework.retry.backoff.ExponentialBackOffPolicy">
						<property name="initialInterval" value="1000" />
						<property name="multiplier" value="5" />
					</bean>
				</property>
			</bean>			
		</property>
		<property name="recoveryCallback">
			<bean
				class="org.springframework.integration.handler.advice.ErrorMessageSendingRecoverer">
				<constructor-arg ref="indexErrorChannel7" />
			</bean>
		</property>
	</bean>


</beans>

{
	"settings": 
	{
		"number_of_shards": 5,		
		"analysis": 
		{
			"analyzer": 
			{
				"mstar_text_ngram_analyzer": 
				{
					"filter": 
					[
						"standard",
						"lowercase",
						"asciifolding",
						"mstar_text_ngram_tokenizer"
					],

					"type": "custom",
					"tokenizer": "standard"
				}
			},

			"filter": 
			{
				"mstar_text_ngram_tokenizer": 
				{
					"type": "edgeNGram",
					"min_gram": "2",
					"max_gram": "20"
				}
			}
		}
	},

	"mappings": 
	{
		"company": 
		{
			"dynamic": false,
			"properties": 
			{
				"_id": 
				{
					"type" :"string",
					"path": "tickerCode"
				},

				"tickerCode": 
				{
					"type": "string",
					"index": "not_analyzed"
				},

				"marketCap": 
				{
					"type": "double"
				},
				"volume": 
				{
					"type": "double"
				}
				
			}
		},

		"_default_": 
		{
			"dynamic": false,
			"properties": 
			{
				"id": 
				{
					"type": "string",
					"index": "not_analyzed",
					"index_name": "id"
				}
			}
		}
	}
}